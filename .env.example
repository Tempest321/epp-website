# EPP Configuration

# Database
DATABASE_URL=postgresql://epp_user:epp_password@localhost:5432/epp_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# Object Storage (MinIO / S3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=epp-artifacts
S3_REGION=us-east-1

# LLM Service
LLM_BASE_MODEL=meta-llama/Llama-2-13b-hf
LLM_SERVICE_URL=http://localhost:8001
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.1

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=4

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=15
REFRESH_TOKEN_EXPIRY_DAYS=30

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=epp-experiments

# Prefect
PREFECT_API_URL=http://localhost:4200/api

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# Model Serving
MODEL_CACHE_DIR=/tmp/epp_models
EMBEDDING_CACHE_TTL_HOURS=24
PREDICTION_CACHE_TTL_HOURS=1

# Limits
MAX_UPLOAD_SIZE_MB=100
RATE_LIMIT_PER_MINUTE=60

# Environment
ENV=development  # development, staging, production
